page{ background: rgb(255, 255, 255); font-family: 'Helvetica Neue',Helvetica,Arial,Sans-serif; }
.contain_detail_cnt { height: 100%; width: 100%; overflow: hidden; }
.booksinfo{ height:100%; width:100%; align-items: center; position: fixed} 
.bg{width: 100%; height: 100%; position: absolute}

.box-title{ padding: 25px 20px; background: #dad3d300; }
.title{ font-size: 24px; line-height: 25px; color: rgb(50, 212, 64); font-weight: 600; }

.top-item{ display: flex; flex-direction: row; width: 90%; margin-top: 100px; height: 220px; background: rgba(89,137,120,0.8)}
.top-image{ width: 120px; height: 168px; margin-left: 20px; margin-top: 20px}
.top-detail{ height: 100%; margin-left:20px }
.page-title{font-size: 14pt; color: rgb(255,255,255); margin-top: 20px}
.top-separator{margin-top: 10px; width: 90%; height: 2px; background: rgb(255, 255, 255) }
.top-title{font-size: 12pt; color: rgb(255, 255, 255); margin-top: 20px}
.top-writer{ font-size: 10pt; color: rgb(64,71,65); margin-top: 8px}

.subject-container{ height: 280px; margin-top: 50px; width: 100%; white-space: nowrap}
.subject-item{ width: 100px; height: 180px; display:inline-block}
.subject-image{ margin-left: 20px; width: 80px; height: 112px}
.subject-title{ font-size: 10pt; color: rgb(255, 255, 255); margin-left: 24px; margin-top: 8px}

.page-content{ width: 68%; font-size: 13pt; margin-top: 40px; margin-left: 22%; color: rgb(103, 103, 103); overflow: scroll; height: 200px; }
.content{ line-height: 1.8em; margin: 20px 0; font-size: 20px; color: rgba(49, 41, 150, 0.712); }
.scrollLoading{ width: 100%; height: 220px; display: block; margin: 10px 0; }
.contView{ padding: 0 20px 10px; }